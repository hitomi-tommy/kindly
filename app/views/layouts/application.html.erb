<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>Kindly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light ">
      <div class="container">
        <%= link_to 'Kindly', root_path, class:"navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-sample">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-sample">
          <ul class="navbar-nav">
            <li class="nav-item">
            <% if user_signed_in? %>
              <%= link_to '新規作成' ,new_item_path, class:"btn btn-primary" %>
              <%= link_to 'マイページ' ,user_path(current_user.id), class:"bnav-link" %>
              <%= link_to "通知", notifications_path, class:"bnav-link" %>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete , class:"bnav-link"%>
            <% else %>
              <%= link_to 'ログイン', new_user_session_path , class:"bnav-link"%>
              <%= link_to '新規登録', new_user_registration_path , class:"bnav-link"%>
            <% end %>

            <% if current_user.try(:admin?) %>
              <%= link_to "管理者画面", rails_admin_path %>
            <% end %>

            <% if notice %>
            <%= notice %>
            <% end %>
            <% if alert %>
            <%= alert %>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- <div class="alert"> -->
      <%# if notice %>
        <!-- <div class="alert alert-info"><%#= notice %></p> -->
      <%#= notice %>
      <%# end %>
      <%# if alert %>
      <%#= alert %>
        <!-- <div class="alert alert-warning"><%#= alert %></p> -->
      <%# end %>
    <!-- </div> -->

      <%= yield %>

  </body>
</html>
