<div class="container">
<%= form_with(model: @item, local: true) do |form| %>
  <% if @item.errors.any? %>
  <div id="error_explanation">
  <h2><%= @item.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class="form-group">
  <%= form.label :品名 %>
  <%= form.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :説明 %>
  <%= form.text_area :description, class: "form-control" %>
</div><br/>

  <div class="form-group">
    <%= form.label :イメージ画像 %>
    <% @item.images.each do |image| %>
      <%= hidden_field :item, :images, multiple: true, value: image.identifier %>
      <%= image_tag image.url %>
    <% end %>
    <%= form.file_field :images, multiple: true %>
  </div><br/>

  <div class="form-group">
    <%= form.label :予算 %>
    <%= form.text_field :budget %>円
  </div><br/>

  <div class="form-group">
    <%= form.label :希望期限 %>
    <%= form.date_field :deadline %>
  </div><br/>

  <div class="form-group">
  <%= form.label :カテゴリー %>
  <%= form.select :category, [
                        'レディース',
                        'メンズ',
                        'ベビー・キッズ',
                        'インテリア・住まい・小物',
                        '本・音楽・ゲーム',
                        'おもちゃ・ホビー・グッズ',
                        'コスメ・香水・美容',
                        '家電・スマホ・カメラ',
                        'スポーツ・レジャー',
                        'ハンドメイド',
                        'チケット',
                        '自動車・オートバイ',
                        'その他',
                      ], {prompt: "選択してください"}, class: "form-control" %>
  </div><br/>

  <div class="form-group">
    <%= form.label :情報募集状況 %>
    <%= form.select :status, [ "募集中", "募集終了" ], class: "form-control" %>
  </div><br/>

  <div class="actions">
    <%= form.submit %>
  </div><br/>
<% end %>

<div>
  <% if current_user == @item.user %>
    <%= link_to "編集", edit_item_path(@item.id), class: "btn btn-secondary" %>
    <%= link_to '削除', item_path(@item.id), class: "btn btn-secondary", method: :delete, data: { confirm: '本当に削除していいですか？' } %></h6>
  <% end %>
</div><br/>
<%= link_to "一覧画面にもどる", items_path %>
</div>
<br/>
<br/>
