<% if current_user.try(:admin?) %>
  <h1>管理者投稿一覧</h1>
<% else %>
  <h1>投稿一覧</h1>
<% end %>

<%= search_form_for @q do |f| %>
  <%= f.label :name_or_description, "キーワード" %>
  <%= f.search_field :name_or_description_cont %>

  <%= f.label :予算 %>
  <%= f.number_field :budget_gteq %>円以上〜
  <%= f.number_field :budget_lt %>円未満

  <%= f.label :カテゴリー %>
  <%= f.select :category_eq, [
                        'レディース',
                        'メンズ',
                        'ベビー・キッズ',
                        'インテリア・住まい・小物',
                        '本・音楽・ゲーム',
                        'おもちゃ・ホビー・グッズ',
                        'コスメ・香水・美容',
                        '家電・スマホ・カメラ',
                        'スポーツ・レジャー',
                        'ハンドメイド',
                        'チケット',
                        '自動車・オートバイ',
                        'その他',
                      ], {prompt: "選択してください"} %>

  <%= f.label :募集のステータス %>
  <%= f.check_box :status_eq, {}, "募集中", "募集終了" %>募集中のみ表示

  <%= link_to "クリア", 'items#index', type: "button"%>
  <%= f.submit "検索" %>
<% end %>

<table>
  <tr>
  <th>品名</th>
  <th>説明</th>
  <th>イメージ画像</th>
  <th><%= sort_link(@q, :budget, "予算") %></th>
  <th><%= sort_link(@q, :deadline, "希望期限") %></th>
  <th>カテゴリー</th>
  <th>情報募集状況</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= image_tag item.images.first.to_s %></td>
      <td><%= item.budget %>円</td>
      <td><%= l(item.deadline, format: :short) if item.deadline %></td>
      <td><%= item.category %></td>
      <td><%= item.status %></td>
      <td><%= link_to '詳細', item_path(item.id) %></td>
      <% if current_user == item.user %>
        <td><%= link_to "編集する", edit_item_path(item.id) %></td>
        <td><%= link_to '削除する', item_path(item.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
